#!/bin/bash
# batchProcessing-0x02
# Script to fetch multiple Pokémon data and save to separate files

# Directory to store JSON files
OUTPUT_DIR="pokemon_data"
mkdir -p "$OUTPUT_DIR"

# List of Pokémon
POKEMONS=("Bulbasaur" "Ivysaur" "Venusaur" "Charmander" "Charmeleon")

# Loop through each Pokémon
for pokemon in "${POKEMONS[@]}"; do
    # Convert name to lowercase for filename
    name_lower=$(echo "$pokemon" | tr '[:upper:]' '[:lower:]')
    
    echo "Fetching data for $name_lower..."
    
    # Fetch data from API
    response=$(curl -s -w "%{http_code}" -o "$OUTPUT_DIR/$name_lower.json" "https://pokeapi.co/api/v2/pokemon/$name_lower")
    http_code="${response: -3}"
    
    # Check if request was successful
    if [ "$http_code" -eq 200 ]; then
        echo "Saved data to $OUTPUT_DIR/$name_lower.json ✅"
    else
        echo "Failed to fetch $name_lower. HTTP status: $http_code"
        [ -f "$OUTPUT_DIR/$name_lower.json" ] && rm "$OUTPUT_DIR/$name_lower.json"
    fi
    
    # Delay to avoid rate-limiting
    sleep 1
done
