#!/bin/bash
# summaryData-0x03
# Script to summarize PokÃ©mon data into a CSV report

INPUT_DIR="pokemon_data"
OUTPUT_FILE="pokemon_report.csv"

# Check if input directory exists
if [ ! -d "$INPUT_DIR" ]; then
    echo "Directory $INPUT_DIR does not exist."
    exit 1
fi

# CSV header
echo "Name,Height (m),Weight (kg)" > "$OUTPUT_FILE"

# Extract data from each JSON file
for file in "$INPUT_DIR"/*.json; do
    name=$(jq -r '.name' "$file" | sed 's/.*/\u&/')          # Capitalize name
    height=$(jq -r '.height' "$file" | awk '{printf "%.1f", $1/10}')  # decimeters to meters
    weight=$(jq -r '.weight' "$file" | awk '{printf "%.1f", $1/10}')  # hectograms to kg
    echo "$name,$height,$weight" >> "$OUTPUT_FILE"
done

echo "CSV Report generated at: $OUTPUT_FILE"
echo ""

# Calculate averages using awk
avg=$(awk -F, 'NR>1 {h+=$2; w+=$3; n++} END {printf "Average Height: %.2f m\nAverage Weight: %.2f kg\n", h/n, w/n}' "$OUTPUT_FILE")
echo "$avg"
